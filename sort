#include "stdafx.h"
#include <iostream>

#include "windows.h"	
using namespace std;

int a[21],c[21];
int n;
int main()
{
	SetConsoleOutputCP(1251);
	cout<<"Въведи броя на числата: ";
	/*do{
		cin>>n;
		if(n>21 || n<0){
			cout<<"Грешно число"<<endl;}
	}
	while(n>1 && n<=21); */
	while(n>21 && n<1){
		cin>>n;
		if(n>21 || n<0){
			cout<<"Грешно число"<<endl;}
	}
	int i,j;
	for(i=1; i<=n; i++){
		cout<<"Въведи "<<i<<"-то число: ";
		cin>>a[i];
		c[i]=0;
		int w=a[i];
		while(w>0){
			c[i]+=(w%10);
			w/=10;
		}
	}
	int b;
	do {
		b=0;
		for(i=1; i<n;i++){
			if((c[i]>c[i+1]) || ((c[i] == c[i+1]) && (a[i] > a[i+1]))){
				int w;
				w=a[i];
				a[i]=a[i+1];
				a[i+1]=w;
				w=c[i];
				c[i]=c[i+1];
				c[i+1]=w;
				b=1;
			}
		}
	}
		while(b);
		for(i=1;i<=n;i++)
			cout<< a[i]<<" ";
		cout<<"\n";
	return 0;
}

