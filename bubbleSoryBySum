#include "pch.h"
#include <iostream>

#include "windows.h"	
using namespace std;

int a[21], c[21];
int n;
int main()
{
	SetConsoleOutputCP(1251);
	//Проверка дали въведеното число е в границите [1,21]
	do{
		cout << "Въведи броя на числата: ";
		cin>>n;
		if(n>21 || n<0){
			cout<<"Грешно число"<<endl;
		}
		
	}
	while(n < 1 || n > 21);

	int i, j; // Използват се във for цикли
	//Въвеждане на числата в масива "а" и зануляване на масива "с"
	for (i = 1; i <= n; i++) {
		cout << "Въведи " << i << "-то число: ";
		cin >> a[i];
		c[i] = 0;
		int w = a[i];
		//Сбора на цифрите в числото
		while (w > 0) {
			c[i] += (w % 10);
			w /= 10;
		}
	}
	int b; //Помощна променлива 
	//Сортиране по сбора на цифрите
	do {
		b = 0;
		for (i = 1; i < n; i++) {
			//Сравнява две съседни суми, по-голямата отива по назад в масива "с"
			//Ако сумата е равна сравнява въведените числа 
			if ((c[i] > c[i + 1]) || ((c[i] == c[i + 1]) && (a[i] > a[i + 1]))) {
				int w;
				w = a[i];
				a[i] = a[i + 1];
				a[i + 1] = w;
				w = c[i];
				c[i] = c[i + 1];
				c[i + 1] = w;
				b = 1;
			}
		}
	} while (b);
	//Извеждане на числата във възходящ ред спрямо сумата на цифрите им
	for (i = 1; i <= n; i++)
		cout << a[i] << " ";
	cout << "\n";
	return 0;
}
